                  <Label styleClass="header-title" text="Choose Transportation" />
                  <Label styleClass="header-subtitle" text="Select a vehicle that accommodates your group size" />
               </children>
            </VBox>
            
            <!-- Filter Section -->
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #F8FAFF; -fx-background-radius: 12; -fx-padding: 15 20;">
               <children>
                  <FontAwesomeIconView fill="#4318ff" glyphName="FILTER" size="14" />
                  <Label style="-fx-font-weight: bold; -fx-text-fill: #2B3674;" text="Filter by Type:" />
                  <HBox spacing="20">
                     <children>
                        <RadioButton fx:id="all_vehicle_radio" mnemonicParsing="false" selected="true" styleClass="radio-button" text="All">
                           <toggleGroup>
                              <ToggleGroup fx:id="vehicle_type_group" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="sedan_radio" mnemonicParsing="false" styleClass="radio-button" text="ðŸš— Sedan (4 seats)" toggleGroup="$vehicle_type_group" />
                        <RadioButton fx:id="van_radio" mnemonicParsing="false" styleClass="radio-button" text="ðŸš Van (10 seats)" toggleGroup="$vehicle_type_group" />
                        <RadioButton fx:id="bus_radio" mnemonicParsing="false" styleClass="radio-button" text="ðŸšŒ Bus (50 seats)" toggleGroup="$vehicle_type_group" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            
            <!-- Vehicles List -->
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="vehicle_container" spacing="15">
                     <padding>
                        <Insets bottom="10.0" right="10.0" top="5.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
