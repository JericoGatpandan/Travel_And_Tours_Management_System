<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" prefWidth="250.0" spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 0 1;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cht.travelmanagement.Controllers.User.BookingWizard.BookingSummaryController">
   <padding>
      <Insets bottom="20.0" left="15.0" right="15.0" top="20.0" />
   </padding>
   <children>
      <!-- Header -->
      <Text style="-fx-font-size: 16; -fx-font-weight: bold; -fx-fill: #2C3E50;" strokeType="OUTSIDE" strokeWidth="0.0" text="Booking Summary" />
      <Label fx:id="complete_percent_lbl" style="-fx-text-fill: #7F8C8D;" text="0% Complete" />
      
      <Separator />
      
      <!-- Summary Items -->
      <VBox spacing="15.0" VBox.vgrow="ALWAYS">
         <children>
            <!-- Customer Section -->
            <VBox spacing="3.0">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="ðŸ‘¤ Customer" />
                  <Label fx:id="customer_lbl" style="-fx-text-fill: #7F8C8D;" text="Not set" wrapText="true" />
               </children>
            </VBox>
            
            <!-- Package Section -->
            <VBox spacing="3.0">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="ðŸ“¦ Package" />
                  <Label fx:id="package_lbl" style="-fx-text-fill: #7F8C8D;" text="Not selected" wrapText="true" />
               </children>
            </VBox>
            
            <!-- Hotel Section -->
            <VBox spacing="3.0">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="ðŸ¨ Hotel" />
                  <Label fx:id="hotel_lbl" style="-fx-text-fill: #7F8C8D;" text="Not selected" wrapText="true" />
               </children>
            </VBox>
            
            <!-- Transport Section -->
            <VBox spacing="3.0">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="ðŸš Transport" />
                  <Label fx:id="transport_lbl" style="-fx-text-fill: #7F8C8D;" text="Not selected" wrapText="true" />
               </children>
            </VBox>
         </children>
      </VBox>
      
      <Separator />
      
      <!-- Total Cost Section -->
      <VBox alignment="CENTER" spacing="5.0">
         <children>
            <Label style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Total Cost" />
            <Label fx:id="total_cost_lbl" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #e74c3c;" text="PHP 0" />
            <Text fx:id="cost_hint_txt" style="-fx-font-size: 10; -fx-fill: #7F8C8D;" strokeType="OUTSIDE" strokeWidth="0.0" text="Add items to see total" textAlignment="CENTER" wrappingWidth="200.0" />
         </children>
      </VBox>
      
      <Separator />
      
      <!-- Progress Section -->
      <VBox alignment="CENTER" spacing="8.0">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Text style="-fx-font-size: 12; -fx-fill: #2C3E50;" strokeType="OUTSIDE" strokeWidth="0.0" text="Completion" />
                  <Label fx:id="completion_count_lbl" style="-fx-font-weight: bold;" text="0/5" />
               </children>
            </HBox>
            <ProgressBar fx:id="progress_bar" prefHeight="12.0" prefWidth="200.0" progress="0.0" style="-fx-accent: #007bff;" />
         </children>
      </VBox>
   </children>
</VBox>
