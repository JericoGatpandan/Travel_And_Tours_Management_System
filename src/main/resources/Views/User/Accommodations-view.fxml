<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../../Styles/Common.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cht.travelmanagement.Controllers.User.AccommodationsController">
   <children>
      <VBox spacing="15" styleClass="page-container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Header Section -->
            <VBox spacing="5">
               <children>
                  <Label styleClass="page-title" text="Accommodations" />
                  <Label styleClass="page-subtitle" text="Browse available hotels and accommodations" />
               </children>
            </VBox>

            <!-- Search Bar -->
            <HBox alignment="CENTER_LEFT" spacing="15">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10" styleClass="search-container" HBox.hgrow="SOMETIMES">
                     <children>
                        <FontAwesomeIconView glyphName="SEARCH" size="16" styleClass="search-icon" />
                        <TextField fx:id="search_fld" prefWidth="300" promptText="Search by hotel name or location..." styleClass="search-field" />
                     </children>
                  </HBox>
                  <Pane HBox.hgrow="ALWAYS" />
                  <Label fx:id="accommodationCount_lbl" styleClass="label-muted" text="0 accommodations" />
               </children>
            </HBox>

            <!-- Accommodations Grid -->
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
               <content>
                  <FlowPane fx:id="accommodations_grid" hgap="20" vgap="20">
                     <padding>
                        <Insets bottom="10" right="10" top="10" />
                     </padding>
                  </FlowPane>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
