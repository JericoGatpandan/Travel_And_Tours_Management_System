<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../../Styles/Common.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cht.travelmanagement.Controllers.User.PaymentsController">
   <children>
      <VBox spacing="15" styleClass="page-container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Header Section -->
            <VBox spacing="5">
               <children>
                  <Label styleClass="page-title" text="Payments" />
                  <Label styleClass="page-subtitle" text="Track payment records and transactions" />
               </children>
            </VBox>

            <!-- Stats Cards -->
            <HBox spacing="20">
               <children>
                  <VBox spacing="5" styleClass="stat-card" HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="label-muted" text="Total Received" />
                        <Label fx:id="totalReceived_lbl" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="₱0.00" />
                     </children>
                     <padding>
                        <Insets bottom="15" left="20" right="20" top="15" />
                     </padding>
                  </VBox>
                  <VBox spacing="5" styleClass="stat-card" HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="label-muted" text="Pending Payments" />
                        <Label fx:id="totalPending_lbl" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #f39c12;" text="₱0.00" />
                     </children>
                     <padding>
                        <Insets bottom="15" left="20" right="20" top="15" />
                     </padding>
                  </VBox>
                  <VBox spacing="5" styleClass="stat-card" HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="label-muted" text="Total Transactions" />
                        <Label fx:id="totalCount_lbl" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #3498db;" text="0" />
                     </children>
                     <padding>
                        <Insets bottom="15" left="20" right="20" top="15" />
                     </padding>
                  </VBox>
               </children>
            </HBox>

            <!-- Search Bar -->
            <HBox alignment="CENTER_LEFT" spacing="15">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10" styleClass="search-container" HBox.hgrow="SOMETIMES">
                     <children>
                        <FontAwesomeIconView glyphName="SEARCH" size="16" styleClass="search-icon" />
                        <TextField fx:id="search_fld" prefWidth="300" promptText="Search by client, reference or booking ID..." styleClass="search-field" />
                     </children>
                  </HBox>
                  <Pane HBox.hgrow="ALWAYS" />
               </children>
            </HBox>

            <!-- Payments Table -->
            <VBox styleClass="content-card-no-padding" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="payments_table" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="paymentId_col" minWidth="60" prefWidth="60" text="ID" />
                        <TableColumn fx:id="bookingId_col" minWidth="80" prefWidth="80" text="Booking" />
                        <TableColumn fx:id="clientName_col" minWidth="150" prefWidth="170" text="Client" />
                        <TableColumn fx:id="packageName_col" minWidth="180" prefWidth="200" text="Package" />
                        <TableColumn fx:id="amount_col" minWidth="120" prefWidth="130" text="Amount" />
                        <TableColumn fx:id="paymentDate_col" minWidth="110" prefWidth="110" text="Date" />
                        <TableColumn fx:id="method_col" minWidth="100" prefWidth="100" text="Method" />
                        <TableColumn fx:id="status_col" minWidth="90" prefWidth="90" text="Status" />
                        <TableColumn fx:id="reference_col" minWidth="130" prefWidth="150" text="Reference" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="10" left="10" right="10" top="10" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
