<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane stylesheets="@../../Styles/Common.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cht.travelmanagement.Controllers.User.ClientsController">
   <children>
      <VBox spacing="15" styleClass="page-container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Header Section -->
            <VBox spacing="5">
               <children>
                  <Label styleClass="page-title" text="Clients" />
                  <Label styleClass="page-subtitle" text="Manage your client records and contact information" />
               </children>
            </VBox>

            <!-- Search and Actions Bar -->
            <HBox alignment="CENTER_LEFT" spacing="15">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10" styleClass="search-container" HBox.hgrow="SOMETIMES">
                     <children>
                        <FontAwesomeIconView glyphName="SEARCH" size="16" styleClass="search-icon" />
                        <TextField fx:id="search_fld" prefWidth="300" promptText="Search by name, email or contact..." styleClass="search-field" />
                     </children>
                  </HBox>
                  <Pane HBox.hgrow="ALWAYS" />
                  <Button fx:id="addClient_btn" mnemonicParsing="false" onAction="#handleAddClient" styleClass="btn-primary" text="Add Client">
                     <graphic>
                        <FontAwesomeIconView glyphName="PLUS" size="14" />
                     </graphic>
                  </Button>
               </children>
            </HBox>

            <!-- Clients Table -->
            <VBox styleClass="content-card-no-padding" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="clients_table" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="clientId_col" minWidth="60" prefWidth="60" text="ID" />
                        <TableColumn fx:id="clientName_col" minWidth="150" prefWidth="180" text="Name" />
                        <TableColumn fx:id="email_col" minWidth="180" prefWidth="200" text="Email" />
                        <TableColumn fx:id="contactNum_col" minWidth="120" prefWidth="130" text="Contact" />
                        <TableColumn fx:id="address_col" minWidth="150" prefWidth="180" text="Address" />
                        <TableColumn fx:id="customerType_col" minWidth="100" prefWidth="100" text="Type" />
                        <TableColumn fx:id="dateRegistered_col" minWidth="68.0" prefWidth="82.0" text="Registered" />
                        <TableColumn fx:id="actions_col" minWidth="100" prefWidth="118.0" text="Actions" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="10" left="10" right="10" top="10" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
